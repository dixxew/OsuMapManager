<UserControl
	x:Class="MapManager.GUI.Views.CollectionsControl"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:model="using:MapManager.GUI.Models"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">
	<UserControl.DataContext>
		<Binding Path="CollectionsViewModel" Source="{StaticResource Locator}" />
	</UserControl.DataContext>
	<UserControl.Styles>
		<Style Selector="TextBlock">
			<Setter Property="FontSize" Value="18" />
		</Style>
	</UserControl.Styles>
	<TreeView Grid.Row="1" ItemsSource="{Binding Collections}" SelectedItem="{Binding SelectedTreeViewCollection}" SelectionMode="Single">
		<TreeView.DataTemplates>
			<TreeDataTemplate DataType="model:Collection" ItemsSource="{Binding Beatmaps}">
				<TextBlock HorizontalAlignment="Stretch" Text="{Binding Name}" />
			</TreeDataTemplate>
			<DataTemplate DataType="model:Beatmap">
				<TextBlock Width="{Binding $parent.Bounds.Width, Converter={StaticResource TreeViewWidthByParentConveter}}" Margin="-26,0,0,0">
					<Run Text="{Binding Artist}" />
					<Run Text=" - " />
					<Run Text="{Binding Title}" />
				</TextBlock>
			</DataTemplate>
		</TreeView.DataTemplates>
	</TreeView>
</UserControl>
